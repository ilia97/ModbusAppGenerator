@model ModbusAppGenerator.ViewModels.ProjectViewModels.CreateProjectViewModel

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center">Create a New Project. Step 1</h2>

<h5 class="text-center">Welcome to modbus project creation form! Please complete main settings of your project.</h5>
<div>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input asp-for="Name" class="mdl-textfield__input" autocomplete="off" required>
                <label asp-for="Name" class="mdl-textfield__label"></label>
            </div>
            <div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label getmdl-select">
                <input type="text" value="" class="mdl-textfield__input" id="ConnectionType" readonly required>
                <input type="hidden" value="" name="ConnectionType">
                <i class="mdl-icon-toggle__label material-icons">keyboard_arrow_down</i>
                <label asp-for="ConnectionType" class="mdl-textfield__label"></label>
                <ul for="sample4" class="mdl-menu mdl-menu--bottom-left mdl-js-menu">
                    <li class="mdl-menu__item" data-val="Ip">Ip</li>
                    <li class="mdl-menu__item" data-val="Com">Com</li>
                </ul>
            </div>
            <div>
                <span asp-validation-for="ConnectionType" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <textarea  asp-for="Description" class="mdl-textfield__input" type="text" rows="3" required></textarea>
                <label asp-for="Description" class="mdl-textfield__label"></label>
            </div>
            <div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="mdl-button mdl-js-button mdl-button--raised primary-button" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
