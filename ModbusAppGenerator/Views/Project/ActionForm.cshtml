@model ModbusAppGenerator.ViewModels.ProjectViewModels.ActionViewModel

<div>
    <input type="hidden" value="@Model.Id" class="action-id" />
    <div class="form-group">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input asp-for="SlaveAddress" class="mdl-textfield__input">
            <label asp-for="SlaveAddress" class="mdl-textfield__label"></label>
        </div>
        <div>
            <span asp-validation-for="SlaveAddress" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input asp-for="StartAddress" class="mdl-textfield__input">
            <label asp-for="StartAddress" class="mdl-textfield__label"></label>
        </div>
        <div>
            <span asp-validation-for="StartAddress" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input asp-for="NumberOfRegisters" class="mdl-textfield__input">
            <label asp-for="NumberOfRegisters" class="mdl-textfield__label"></label>
        </div>
        <div>
            <span asp-validation-for="NumberOfRegisters" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input asp-for="Types" class="mdl-textfield__input">
            <label asp-for="Types" class="mdl-textfield__label"></label>
        </div>
        <div>
            <span asp-validation-for="Types" class="text-danger"></span>
        </div>
    </div>
</div>
