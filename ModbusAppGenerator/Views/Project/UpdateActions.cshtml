@using ModbusAppGenerator.ViewModels.ProjectViewModels

@model AddProjectActionsViewModel

@{
    ViewData["Title"] = "Update Actions";
}

<h2 class="text-center">Create a New Project. Step 3</h2>

<h5 class="text-center">Nice work! Now you are ready to add all actions you want your app to perform.</h5>

<div class="row update-actions">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        @Html.HiddenFor(m => m.Id)
    </div>
    <div class="row">
        <div class="actions">
            @for (int i = 0; i < Model.Actions.Count; i++)
            {
                <div class="action">
                    @Html.Partial("ActionForm", Model.Actions[i])
                </div>
            }
        </div>
        <div class="hidden new-action">
            @Html.Partial("ActionForm", new ActionViewModel())
        </div>
    </div>
    <div class="form-group">
        <input type="submit" id="add-action-button" value="Add Action" class="mdl-button mdl-js-button mdl-button--raised primary-button" />
    </div>
    <div class="form-group">
        <input type="submit" id="save-actions-button" value="Save" class="mdl-button mdl-js-button mdl-button--raised primary-button" />
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/viewControllers/project/update-actions.js"></script>
}
