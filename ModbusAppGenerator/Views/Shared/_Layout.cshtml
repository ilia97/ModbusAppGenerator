<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Modbus App Generator</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="demo-layout-transparent mdl-layout mdl-js-layout">
        <header class="mdl-layout__header mdl-layout__header--transparent">
            <div class="mdl-layout__header-row">
                <!-- Title -->
                <span class="mdl-layout-title"></span>
                <!-- Add spacer, to align navigation to the right -->
                <div class="mdl-layout-spacer"></div>
                <!-- Navigation -->
                <nav class="mdl-navigation">
                    <a class="mdl-navigation__link" href="@Url.Action("Index", "Project")">My Projects</a>
                    <a class="mdl-navigation__link" href="@Url.Action("About", "Home")">About Us</a>
                    <a class="mdl-navigation__link" href="@Url.Action("Index", "Manage")">My Profile</a>
                    <a class="mdl-navigation__link" href="@Url.Action("LogOff", "Account")">Logout</a>
                </nav>
            </div>
        </header>
    </div>
    <div class="container body-content">
        <div style="margin-top: 80px;">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Modbus App Generator</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/material")
    @Scripts.Render("~/bundles/overrides")
    @Scripts.Render("~/bundles/common")
    @Scripts.Render("~/bundles/services")
    @RenderSection("scripts", required: false)
</body>
</html>
