@model ModbusAppGenerator.ViewModels.AccountViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

<div class="register-container">
    <div class="register-image">
        <img src="~/Content/images/computer-network-512.png" width="100" height="100" />
    </div>
    <div class="register-form">
        <section>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" }, "")
                <div class="form-group">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        @Html.TextBoxFor(m => m.Email, new { @class = "mdl-textfield__input required" })
                        @Html.LabelFor(m => m.Email, new { @class = "mdl-textfield__label" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "mdl-textfield__error" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        @Html.PasswordFor(m => m.Password, new { @class = "mdl-textfield__input required" })
                        @Html.LabelFor(m => m.Password, new { @class = "mdl-textfield__label" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "mdl-textfield__error" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "mdl-textfield__input required" })
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "mdl-textfield__label" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "mdl-textfield__error" })
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="mdl-button mdl-js-button mdl-button--raised primary-button">Register</button>
                </div>
            }
        </section>
        <div class="form-group text-center">
            <p>
                @Html.ActionLink("Already have an account?", "Login", new { ReturnUrl = ViewData["ReturnUrl"] }, new { @class = "mdl-button mdl-js-button mdl-button--raised mdl-button--accent login-secondary-button" })
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
