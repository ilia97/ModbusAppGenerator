@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "_LayoutEmpty";
}

<div class="login-container">
    <div class="login-image">
        <img src="~/images/computer-network-512.png" width="100" height="100" />
    </div>
    <div class="login-form">
        <section>
            <h4 class="text-center">@ViewData["Title"]<br />Please enter your email.</h4>
            <form asp-action="ForgotPassword" method="post">
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="form-group">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input asp-for="Email" class="mdl-textfield__input" type="text">
                        <label asp-for="Email" class="mdl-textfield__label"></label>
                    </div>
                    <div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="mdl-button mdl-js-button mdl-button--raised primary-button">Submit</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
