@model IndexViewModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input asp-for="Username" class="mdl-textfield__input" disabled>
                    <label asp-for="Username" class="mdl-textfield__label"></label>
                </div>
            </div>
            <div class="form-group">
                @if (Model.EmailConfirmed)
                {
                    <div class="input-group">
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <input asp-for="Email" class="mdl-textfield__input" type="text">
                            <label asp-for="Email" class="mdl-textfield__label"></label>
                        </div>
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input asp-for="Email" class="mdl-textfield__input">
                        <label asp-for="Email" class="mdl-textfield__label"></label>
                    </div>
                    <button asp-action="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }
                    <div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
            </div>
            <div class="form-group">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input asp-for="PhoneNumber" class="mdl-textfield__input">
                    <label asp-for="PhoneNumber" class="mdl-textfield__label"></label>
                </div>
                <div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="mdl-button mdl-js-button mdl-button--raised primary-button" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
